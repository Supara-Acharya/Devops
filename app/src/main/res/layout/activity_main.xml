<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="5"
    tools:context="calculator.promact.com.calculatorapp.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/entry"
        android:layout_weight="1"
        android:focusable="false"
        android:text="0"
        android:textAlignment="viewEnd"
        android:maxLines="1"
        android:inputType="text"
        android:textSize="50sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:layout_weight="1"
        android:lines="1"
        android:text=""
        android:textAlignment="viewEnd"
        android:textSize="45sp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"

        android:columnCount="4"
        android:rowCount="4">

        <Button
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/key_eight"
            android:layout_gravity="fill"
            android:text="8"
            android:textSize="30sp"
            android:onClick="keyPressed"/>

        <Button
            android:layout_column="2"
            android:layout_row="0"
            android:id="@+id/key_nine"
            android:layout_gravity="fill"
            android:text="9"
            android:textSize="30sp"
            android:onClick="keyPressed"/>

        <Button
            android:layout_rowSpan="2"
            android:layout_gravity="fill_vertical"
            android:id="@+id/key_plus"
            android:text="+"
            android:textSize="30sp"
            android:onClick="keyPressed"/>

        <Button
            android:layout_column="0"
            android:layout_row="1"
            android:id="@+id/key_four"
            android:layout_gravity="fill"
            android:text="4"
            android:textSize="30sp"
            android:onClick="keyPressed"/>

        <Button
            android:layout_column="1"
            android:layout_row="1"
            android:id="@+id/key_five"
            android:layout_gravity="fill"
            android:text="5"
            android:textSize="30sp"
            android:onClick="keyPressed"/>

        <Button
            android:layout_column="2"
            android:layout_row="1"
            android:id="@+id/key_six"
            android:layout_gravity="fill"
            android:text="6"
            android:textSize="30sp"
            android:onClick="keyPressed"/>

        <Button
            android:layout_column="0"
            android:layout_row="2"
            android:id="@+id/key_one"
            android:layout_gravity="fill"
            android:text="1"
            android:textSize="30sp"
            android:onClick="keyPressed"/>

        <Button
            android:layout_column="2"
            android:layout_row="2"
            android:id="@+id/key_three"
            android:layout_gravity="fill"
            android:text="3"
            android:textSize="30sp"
            android:onClick="keyPressed"/>

        <Button
            android:layout_rowSpan="2"
            android:layout_gravity="fill_vertical"
            android:id="@+id/key_minus"
            android:text="-"
            android:textSize="30sp"
            android:onClick="keyPressed"/>

        <Button
            android:layout_column="0"
            android:layout_row="3"
            android:id="@+id/key_clear"
            android:layout_gravity="fill"
            android:text="C"
            android:textSize="30sp"
            android:onClick="keyPressed"/>

        <Button
            android:layout_column="2"
            android:layout_row="3"
            android:id="@+id/key_equal"
            android:layout_gravity="fill"
            android:text="="
            android:textSize="30sp"
            android:onClick="keyPressed"/>

        <Button
            android:layout_column="0"
            android:layout_row="0"
            android:id="@+id/key_seven"
            android:gravity="center"
            android:text="7"
            android:layout_gravity="fill"
            android:textSize="30sp"
            android:onClick="keyPressed"
            />

        <Button
            android:layout_column="1"
            android:layout_row="3"
            android:id="@+id/key_zero"
            android:layout_gravity="fill"
            android:text="0"
            android:textSize="30sp"
            android:onClick="keyPressed"/>

        <Button
            android:layout_column="1"
            android:layout_row="2"
            android:id="@+id/key_two"
            android:layout_gravity="fill"
            android:text="2"
            android:textSize="30sp"
            android:onClick="keyPressed"/>
    </GridLayout>
</LinearLayout>